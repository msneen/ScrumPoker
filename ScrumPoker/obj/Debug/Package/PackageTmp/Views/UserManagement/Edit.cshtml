@using ScrumPoker.ViewModels.UserManagement;
@using ScrumPoker.Models;
@model UserProfileEdit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>UserProfile</legend>

        @Html.HiddenFor(model => model.UserProfile.UserId)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserProfile.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserProfile.UserName)
            @Html.ValidationMessageFor(model => model.UserProfile.UserName)
        </div>
        <br />
        <div class="editor-label">
            @Html.LabelFor(model => model.UserProfile.Roles)
        </div>
        <div class="editor-field">
            @foreach (var role in Model.Roles)
            {
                var userRole = (from ur in Model.UserProfile.Roles where ur.RoleId == role.RoleId select ur).FirstOrDefault();
                <div class="editor-field">@Html.CheckBox("Role_" + role.RoleName, userRole == null?false:true) @role.RoleName</div> 
            }
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
