@using ScrumPoker.Models;
@using ScrumPoker.Services;
@using ScrumPoker.ViewModels.Poker;
@model PokerVm

@if (ScrumMasterSvc.IsScrumMaster(User.Identity.Name))
{
    <hr />
    using (Html.BeginForm("AddProject", "Poker"))
    {
        if (Model.Projects != null && Model.Projects.Count > 0)
        {
            SelectList list = new SelectList(Model.Projects, "id", "ProjectName", Model.Projects.Last().id.ToString());
            <div>
                <h3>@Html.Label("ScrumMaster - Choose Project")</h3>
            </div>
            <div>
                @Html.DropDownListFor(model => Model.Projects, list, new { @style="font-size: x-large;"})
            </div>
            <div>
                <input type="submit" value="Vote on this Project"/>
            </div>
        }<br />
    }
    <hr />   
       
        if (Model.ProjectId > 0)
        {       <h3>ScrumMaster - @Model.ProjectName Team Members</h3>
                using (Html.BeginForm("AddUser", "Poker", FormMethod.Post))
                {            
                    <input type="text" id="userName" name="userName" />
                    <input type="submit" value="Add Team Member"/>
                 }<br />
        }
    <br />    
   
}