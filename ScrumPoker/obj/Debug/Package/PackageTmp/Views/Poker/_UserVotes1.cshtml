    @using ScrumPoker;
    @using ScrumPoker.Models;   
    @using ScrumPoker.Services;
    @using ScrumPoker.ViewModels.Poker;

    <div id="divVotes">
        <ol id="olVotes">
            @{int colorCounter = 0;
            List<TaskEstimate> taskEstimates = TaskEstimates.GetEstimateList();  
            taskEstimates.Sort(delegate(TaskEstimate T1, TaskEstimate T2)
            {
                return T1.Estimate.CompareTo(T2.Estimate);
            }); //Sort
            }
            @foreach (var taskEstimate in taskEstimates)
            {
                int colorIndex = colorCounter % 8;
                <li class="ui-state-default">
                    <div>@taskEstimate.Name</div>
                    <div style="background-color:@ViewBag.Colors[colorIndex]">@taskEstimate.Estimate&nbsp;</div>
                </li>
                colorCounter += 1;
            }
        </ol>
    </div>
    @if (ScrumMasterSvc.IsScrumMaster(User.Identity.Name))
    {
    <input id="btnSaveTeamMembers" type="button" value="Save Team" class="displayGroup scrumMaster" />
    }
