@model IEnumerable<ScrumPoker.FinalEstimate>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estimate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <h4>
                @Html.DisplayFor(modelItem => item.TaskId)
            </h4>
        </td>
        <td>
            <h3>
                @*@Html.DisplayFor(modelItem => item.Estimate)*@
                @{
                        if (item.Estimate == null)
                        {                         
                            @:?
                        }
                        else if ( item.Estimate == 0 || item.Estimate >=1)
                        {                    
                            @Math.Round(item.Estimate.Value, 0)
                        }
                        else
                        {
                            @String.Format( "{0:#.00}",item.Estimate)
                        }
                    }
            </h3>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.id })
        </td>
    </tr>
}

</table>
