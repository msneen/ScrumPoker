@{
    ViewBag.Title = "Poker";
    int colorCounter = 0;
}

<h2>Poker</h2>

@using (Html.BeginForm("Poker", "Home", FormMethod.Post))
{
        <br />
        <div>
    @Html.TextBox("firstName", (string)ViewBag.FirstName, new { id = "firstName" })
    </div>
    <br />    
    <div>
    @Html.TextBox("estimate", (string)ViewBag.estimate, new { id = "estimate", @style = "width:35px; background-color:red;font-size: xx-large;" })
    
    <input type="submit" value="Submit"/>
    </div>
    <hr />
    if (ViewBag.Estimates != null)
    {
        <div>
        @foreach (var taskEstimate in ViewBag.Estimates)
        {
            int colorIndex = colorCounter % 5;
            <div>@taskEstimate.Name</div><div style="height:40px;width:35px;font-size:xx-large;background-color:@ViewBag.Colors[colorIndex]">@taskEstimate.Estimate</div>
            colorCounter += 1;
        }
    </div>
}
    

}
